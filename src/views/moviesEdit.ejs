<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h1 class="titulo">Película Editada:  <%= Movie.title %></h1>
    <section class="formulario">
        <form action="/movies/update/<%=Movie.id %>?_method=PUT" method="POST">
            <label for="title">Title </label>
            <input type="text" name="title" id="" value="<%= Movie.title %>" required>
            <label for="rating">Rating </label>
            <input type="number" name="rating" id="" value="<%= Movie.rating %>" required>
            <label for="awards">Awards </label>
            <input type="number" name="awards" id="" value="<%= Movie.awards %>" required>
            <label for="release_date">Release date </label>
            <input type="date" name="release_date" id="" value="<%= Movie.release_date %> required">
            <label for="length">Length </label>
            <input type="number" name="length" id="" value="<%= Movie.length %>" required>
            <label for="genre_id">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <% if (Movie.genre_id == genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <br>
            <a href="/">
                <input type="button" style="background-color:darkcyan; color:white" value="Cancelar">
            </a>
            <input type="submit" value="Guardar cambios">
        </form>
    </section>
</body>

</html>